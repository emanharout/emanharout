---
title: Blog
layout: template-parts/base.njk
pagination:
    data: collections.post
    size: 4
    alias: posts
    reverse: true
---

<section class="blog">
    <header class="blog-collection__header">
        <h1>Eman's Blog!</h1>
    </header>
    <ul class="blog-collection__list">
        {# alias converted 'collections.post' var to simply 'posts' #}
        {# Used to be {%- for post in collection.posts | reverse -%} but now we reverse in frontmatter #}
        {%- for post in posts -%}
            {% include 'article-collection-item.njk' %}
        {%- endfor -%}
    </ul>

    {% if pagination.pages.length > 1 %}
    <div class="pagination">
        <ol>
        {% if pagination.href.previous  %}
            <li>
                <button class="svg-button">
                    <a href="{{ pagination.href.previous }}">
                        <img class="pagination-icon" src="/assets/interface/pagination__arrow-left-1.svg"/>
                    </a>
                </button>
            </li>
        {% endif %}
        {% if pagination.href.previous and pagination.href.previous %}
            <li>
                <p>{{ pagination.pageNumber }}</p>
            </li>
        {% endif %}
        {# {%- for page in pagination.pages %}
            {% if loop.index0 < pagination.pageNumber %}
                <li>
                    <a href="{{ pagination.hrefs[loop.index0] }}">{{ loop.index }}</a>
                </li>
            {% endif %}
                        {% if pagination.pageNumber < loop.index0 %}
                <li>
                    <a href="{{ pagination.hrefs[loop.index0] }}">{{ loop.index }}</a>
                </li>
            {% endif %}
        {%- endfor %} #}
        {% if pagination.href.next %}
            <li>
                <button class="svg-button">
                    <a href="{{ pagination.href.next }}">
                        <img class="pagination-icon" src="/assets/interface/pagination__arrow-right-1.svg"/>
                    </a>
                </button>
            </li>
        {% endif %}
        {% if pagination.pageNumber + 1 < pagination.pages.length - 1 %}
            <li>
                <button id="pagination__double-right-arrow-button" class="svg-button">
                    <a href="{{ pagination.href.last }}">
                        <img class="pagination-icon" src="/assets/interface/pagination__arrow-button-right-1.svg"/>
                    </a>
                </button>
                {# <a href="{{ pagination.href.last }}">{{ pagination.pages.length - 1 }} (Last Page)</a> #}
            </li>
        {% endif %}
        </ol>
    </div>
    {% endif %}
</section>